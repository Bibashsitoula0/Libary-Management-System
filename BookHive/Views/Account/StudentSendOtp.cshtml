@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

    var email = HttpContextAccessor.HttpContext.Session.GetString("Email");
    
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="toastr m-t-15">
        <div class="text-left">
            <button type="button" class="btn" id="toastr-success-top-right" onclick="toastMessage()"></button>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="toastr m-t-15">
        <div class="text-left">
            <button type="button" class="btn" id="toastr-success-top-right" onclick="toastMessage()"></button>
        </div>
    </div>
}

<div class="login-form-bg h-150" style="margin-top:150px">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">

                        <div class="card-body pt-5">

                            <div class="form-validation">

                                <div class="basic-form">
                                    <form id="StudentSendOtp" method="post" class="form-valide">
                                        <h4>Verify Email</h4>
                                        <hr />

                                        <div class="form-group row">

                                            <div class="col-lg-12">
                                                <input type="email" class="form-control" value="@email" id="val-email" name="email" placeholder="Enter email.." required>
                                            </div>
                                        </div>

                                        <div>
                                            <button type="submit" class="w-100 btn btn-lg btn-primary" id="send-otp-btn">Send OTP</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>


    $(document).ready(function () {
        debugger;
        var message = '@ViewBag.Message';
        if (message) {
            SucessMessage(message)
        }  

    var warningmessage = '@ViewBag.MessageWarning';
    if (warningmessage) {
        DangerMessage(warningmessage)
    }

    var warningmessage = '@ViewBag.ErrorMessage';
    if (warningmessage) {
        DangerMessage(warningmessage)
    }

    });
   
    
</script>
