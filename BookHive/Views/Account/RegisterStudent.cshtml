@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="toastr m-t-15">
        <div class="text-left">
            <button type="button" class="btn" id="toastr-success-top-right" onclick="toastMessage()"></button>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.MessageWarning))
{
    <div class="toastr m-t-15">
        <div class="text-left">
            <button type="button" class="btn" id="toastr-warning-top-right" onclick="toastMessagewarning()"></button>
        </div>
    </div>
}


<div class="login-form-bg h-150" style="margin-top:150px">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">

                        <div class="card-body pt-5">
                            <div class="form-validation">

                                <div class="basic-form">
                                    <form id="RegisterStudent" method="post" class="form-valide">
                                        <h4>Student Register</h4>
                                        <hr />

                                        <div class="form-group row">
                                            <label class="col-lg-12 col-form-label" for="val-email">
                                                Email <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-12">
                                                <input type="email" class="form-control" id="val-email" name="email" placeholder="Enter email.." required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-12 col-form-label" for="val-username">
                                                User Name <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-12">
                                                <input type="text" class="form-control" id="val-username" name="username" placeholder="Enter user name" required>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-12 col-form-label" for="val-codeno">
                                                Code No <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-12">
                                                <input type="text" class="form-control" id="val-codeno" name="code" placeholder="Enter code no" required>
                                            </div>
                                        </div>

                                        <div>
                                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="margin-top:10px;">Submit</button>
                                        </div>
                                      
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        debugger;
        var message = '@ViewBag.Message';
        if (message) {
            SucessMessage(message)
        }

        var warningmessage = '@ViewBag.MessageWarning';
        if (warningmessage) {
            DangerMessage(warningmessage)
        }
    });
</script>