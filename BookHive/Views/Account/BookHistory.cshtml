@{

    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Qr data of student";

}
@model BookiHive.Model.StudentData

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div style="overflow: auto;">
                        <div class="col-5 mx-auto text-center" style="margin-top:70px;">
                            <div class="card">
                                <div class="card-body">
                                    <div class="media align-items-center mb-4">
                                        <img class="mr-3" src="https://localhost:44395/Image/thumbnail.png" width="80" height="80" alt="">
                                        <div class="media-body">
                                            <h3 class="mb-0">@Model.userdata[0].user_name
                                            </h3>
                                          
                                        </div>
                                    </div>

                                    <div class="row mb-5">                                       
                                        <div class="col-12 text-center">
                                            <button class="btn btn-danger px-5">Total Book Lend :- @Model.cartViewModels.Count()</button>
                                        </div>
                                    </div>

                                    <ul class="card-profile__info">
                                       
                                        <li><strong class="text-dark mr-4">Student Code</strong> <span>@Model.userdata[0].code</span></li>
                                        <li><strong class="text-dark mr-4">Email</strong> <span>@Model.userdata[0].email</span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>


                    </div>
                  
                    <div class="table-responsive col-12" style="margin-top:70px;">
                        <h4 class="card-title" style="text-align:center;justify-content:center;">Book Borrowed</h4>
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>Book Name</th>
                                    <th>Faculty</th>
                                    <th>Semister</th>
                                    <th>Year</th>
                                    <th>Price</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.cartViewModels)
                                {
                                    <tr>

                                        <td>@item.BookName</td>
                                        <td>@item.faculty_name</td>
                                        <td>@item.semister_name</td>
                                        <td>@item.yearname</td>
                                        <td>@item.Price</td>


                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
