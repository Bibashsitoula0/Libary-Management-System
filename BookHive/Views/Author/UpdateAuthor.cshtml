@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="toastr m-t-15">
        <div class="text-left">
            <button type="button" class="btn" id="toastr-warning-top-right" onclick="toastMessagewarning()"></button>
        </div>
    </div>
}





<div class="login-form-bg h-150">

    <div class="container-fluid h-100">
        <div class="row justify-content-center h-100">

            @if (!string.IsNullOrEmpty(ViewBag.MessageWarning))
            {
                <div class="toastr m-t-15">
                    <div class="text-left">
                        <button type="button" class="btn" id="toastr-warning-top-right" onclick="toastMessagewarning()"></button>
                    </div>
                </div>
            }
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">

                        <div class="card-body pt-5">
                            <div class="form-validation">

                                <div class="basic-form">
                                    <form id="CreateForm" method="post" class="form-valide">
                                        <h4>Update Author</h4>
                                        <hr />
                                        <div class="form-group row">
                                            <label class="col-lg-12 col-form-label" for="val-username">
                                                Author Name <span class="text-danger">*</span>
                                            </label>
                                            <div class="col-lg-12">
                                                <input type="text" class="form-control" id="val-username" name="name" placeholder="Enter a authorname.." required>
                                            </div>
                                        </div>
                                        <div style="margin-top: 15px;">
                                            <button type="submit" style="display: inline-block; margin-left: auto;" class="btn btn-primary">Submit</button>
                                            <a href="/Author/Index" class="btn btn-primary" style="display: inline-block;">Back</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {


        var message = '@ViewBag.Message';
        if (message) {
            SucessMessage(message)
        }

        var warningmessage = '@ViewBag.MessageWarning';
        if (warningmessage) {
            DangerMessage(warningmessage)
        }
    });


</script>

