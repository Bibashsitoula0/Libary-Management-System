@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Book Borrow List";

}
@model List<BookiHive.Model.CartViewModel>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div style="overflow: auto;">
                        <h4 class="card-title" style="text-align:center;justify-content:center;">Students token books list</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>Book Name</th>
                                    <th>Faculty</th>
                                    <th>Semister</th>
                                    <th>Year</th>
                                    <th>Price</th>
                                    <th>Detail</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.BookName</td>
                                        <td>@item.faculty_name</td>
                                        <td>@item.semister_name</td>
                                        <td>@item.yearname</td>
                                        <td>@item.Price</td>
                                        <td>
                                            <span>

                                                <a href="/Account/StudentDetails?Id=@item.UserId" data-toggle="tooltip" data-placement="top" title="Detail"><i class="fa fa-close color-danger"></i></a>
                                            </span>
                                        </td>


                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
